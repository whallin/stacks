<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>stirling-pdf</Name>
    <Repository>ghcr.io/stirling-tools/stirling-pdf:latest</Repository>
    <Registry>https://github.com/Stirling-Tools/Stirling-PDF/pkgs/container/stirling-pdf</Registry>

    <!-- BRANCHES -->
    <Branch>
        <Tag>latest-fat</Tag>
        <TagDescription>Includes additional fonts and bundled Security JAR</TagDescription>
    </Branch>
    <Branch>
        <Tag>latest</Tag>
        <TagDescription>Ready to use with all features</TagDescription>
    </Branch>
    <Branch>
        <Tag>latest-ultra-lite</Tag>
        <TagDescription>Minimal installation with basic features</TagDescription>
    </Branch>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://github.com/Stirling-Tools/Stirling-PDF/issues</Support>
    <Project>https://github.com/Stirling-Tools/Stirling-PDF</Project>
    <ReadMe>https://docs.stirlingpdf.com/</ReadMe>
    <Overview>
        #1 Locally hosted web application that allows you to perform various operations on PDF files
    </Overview>
    <Category>Productivity: Tools:</Category>
    <WebUI>http://[IP]:[PORT:8080]/</WebUI>
    <TemplateURL>https://raw.githubusercontent.com/whallin/stacks/develop/unraid/stirling-pdf.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/stirling-pdf.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--init --no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- MOUNTED PATHS -->
    <Config Name="Stirling-PDF Training Data" Target="/usr/share/tessdata"
        Default="/mnt/user/appdata/stirling-pdf/trainingData" Mode="rw"
        Description="Training data directory for OCR" Type="Path" Display="always" Required="true"
        Mask="false">/mnt/user/appdata/stirling-pdf/trainingData</Config>
    <Config Name="Stirling-PDF Configuration" Target="/configs"
        Default="/mnt/user/appdata/stirling-pdf/configs" Mode="rw"
        Description="Configuration directory for Stirling-PDF" Type="Path" Display="always"
        Required="true"
        Mask="false">/mnt/user/appdata/stirling-pdf/configs</Config>
    <Config Name="Stirling-PDF Custom Files" Target="/customFiles"
        Default="/mnt/user/appdata/stirling-pdf/customFiles" Mode="rw"
        Description="Custom files directory for Stirling-PDF" Type="Path" Display="always"
        Required="true"
        Mask="false">/mnt/user/appdata/stirling-pdf/customFiles</Config>
    <Config Name="Stirling-PDF Logs" Target="/logs"
        Default="/mnt/user/appdata/stirling-pdf/logs" Mode="rw"
        Description="Logs directory for Stirling-PDF" Type="Path" Display="always" Required="true"
        Mask="false">/mnt/user/appdata/stirling-pdf/logs</Config>
    <Config Name="Stirling-PDF Pipeline" Target="/pipeline"
        Default="/mnt/user/appdata/stirling-pdf/pipeline" Mode="rw"
        Description="Pipeline directory for Stirling-PDF" Type="Path" Display="always"
        Required="true"
        Mask="false">/mnt/user/appdata/stirling-pdf/pipeline</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="Web UI Port" Target="8080" Default="8080" Mode="tcp"
        Description="Web UI port for Stirling-PDF" Type="Port"
        Display="always" Required="true" Mask="false">8080</Config>

    <!-- ENVIRONMENT VARIABLES -->
    <Config Name="DISABLE_ADDITIONAL_FEATURES" Target="DISABLE_ADDITIONAL_FEATURES"
        Default="true|false" Mode=""
        Description="Disable downloading Security JAR (required as false for auth login and pro features)"
        Type="Variable" Display="always" Required="true" Mask="false"></Config>
    <Config Name="LANGS" Target="LANGS"
        Default="en_GB" Mode=""
        Description="Custom font libraries to install for document conversions"
        Type="Variable" Display="always" Required="true" Mask="false">en_GB,sv_SE</Config>
</Container>