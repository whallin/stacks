<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>picard</Name>
    <Repository>mikenye/picard:latest</Repository>
    <Registry>https://hub.docker.com/r/mikenye/picard</Registry>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://github.com/mikenye/docker-picard/issues</Support>
    <Project>https://github.com/mikenye/docker-picard</Project>
    <ReadMe>https://github.com/mikenye/docker-picard</ReadMe>
    <Overview>Picard is a cross-platform music tagger written in Python.</Overview>
    <Category>MediaApp:Music</Category>
    <WebUI>http://[IP]:[PORT:5800]/</WebUI>
    <TemplateURL>https://raw.githubusercontent.com/whallin/stacks/develop/unraid/picard.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/picard.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--init --no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- MOUNTED PATHS -->
    <Config Name="Picard Configuration" Target="/config" Default="/mnt/user/appdata/picard/config"
        Mode="rw"
        Description="Configuration directory for Picard" Type="Path" Display="always"
        Required="true" Mask="false">/mnt/user/appdata/picard/config</Config>
    <Config Name="Picard Storage" Target="/storage" Default="/mnt/user/appdata/picard/storage"
        Mode="rw"
        Description="Storage directory for Picard" Type="Path" Display="always" Required="true"
        Mask="false">/mnt/user/appdata/picard/storage</Config>
    <Config Name="Local Time" Target="/etc/localtime" Default="/etc/localtime" Mode="ro"
        Description="Container's local time from host" Type="Path" Display="advanced"
        Required="false" Mask="false">/etc/localtime</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="Picard Web UI" Target="5800" Default="5800" Mode="tcp"
        Description="Web UI for Picard (VNC)"
        Type="Port"
        Display="always" Required="true" Mask="false">5800</Config>

    <!-- ENVIRONMENT VARIABLES -->
    <Config Name="USER_ID" Target="USER_ID" Default="1000" Mode=""
        Description="User ID for the application"
        Type="Variable" Display="always" Required="true" Mask="false">1000</Config>
    <Config Name="GROUP_ID" Target="GROUP_ID" Default="1000" Mode=""
        Description="Group ID for the application"
        Type="Variable" Display="always" Required="true" Mask="false">1000</Config>
    <Config Name="VNC_PASSWORD" Target="VNC_PASSWORD" Default="" Mode=""
        Description="Password for VNC access to the container. Leave empty for no password."
        Type="Variable" Display="always" Required="false" Mask="true">password</Config>
</Container>