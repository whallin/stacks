<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>backblaze-personal-wine</Name>
    <Repository>tessypowder/backblaze-personal-wine</Repository>
    <Registry>https://hub.docker.com/r/tessypowder/backblaze-personal-wine</Registry>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://github.com/JonathanTreffler/backblaze-personal-wine-container/issues</Support>
    <Project>https://github.com/JonathanTreffler/backblaze-personal-wine-container</Project>
    <ReadMe>https://github.com/JonathanTreffler/backblaze-personal-wine-container</ReadMe>
    <Overview>Run the Backblaze personal backup client in a docker container</Overview>
    <Category>Backup:</Category>
    <WebUI>http://[IP]:[PORT:5800]/</WebUI>
    <TemplateURL>
        https://raw.githubusercontent.com/whallin/stacks/develop/unraid/backblaze-personal-wine.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/backblaze.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--init --no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- ADDITIONAL REQUIREMENTS -->
    <Requires>Backblaze requires:&#xD;
        - A backblaze.com Computer Backup subscription</Requires>

    <!-- MOUNTED PATHS -->
    <Config Name="Backblaze Personal Configuration" Target="/config"
        Default="/mnt/user/appdata/backblaze-personal-wine/config"
        Mode="rw"
        Description="Configuration directory for Backblaze Personal" Type="Path" Display="always"
        Required="false"
        Mask="false">/mnt/user/appdata/backblaze-personal-wine/config</Config>
    <Config Name="Local Time" Target="/etc/localtime" Default="/etc/localtime" Mode="ro"
        Description="Container's local time from host" Type="Path" Display="advanced"
        Required="false" Mask="false">/etc/localtime</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="Web UI Port" Target="5800" Default="5800" Mode="tcp"
        Description="Web UI port for Backblaze Personal (VNC)" Type="Port"
        Display="always" Required="true" Mask="false">5800</Config>

    <!-- ENVIRONMENT VARIABLES -->
    <Config Name="DISABLE_AUTOUPDATE" Target="DISABLE_AUTOUPDATE" Default="true|false" Mode=""
        Description="Disables auto-updating the Backblaze client to the latest version at the time of the Docker image release"
        Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
    <Config Name="FORCE_LATEST_UPDATE" Target="FORCE_LATEST_UPDATE" Default="true|false" Mode=""
        Description="Forces the Backblaze client to update to the latest version"
        Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
    <Config Name="VNC_PASSWORD" Target="VNC_PASSWORD" Default="" Mode=""
        Description="Password for VNC access to the container. Leave empty for no password."
        Type="Variable" Display="always" Required="false" Mask="true">password</Config>
</Container>