<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>apache-tika</Name>
    <Repository>apache/tika:latest</Repository>
    <Registry>https://hub.docker.com/r/apache/tika</Registry>

    <!-- BRANCHES -->
    <Branch>
        <Tag>latest-full</Tag>
        <TagDescription>Includes GDAL and Tesseract parser dependencies</TagDescription>
    </Branch>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://issues.apache.org/jira/projects/TIKA/issues</Support>
    <Project>https://tika.apache.org/</Project>
    <ReadMe>https://tika.apache.org/3.2.1/gettingstarted.html</ReadMe>
    <Overview>
        The Apache Tika toolkit detects and extracts metadata and text from over a thousand
        different file types (such as PPT, XLS, and PDF).
    </Overview>
    <Category>Tools:</Category>
    <TemplateURL>https://raw.githubusercontent.com/whallin/stacks/develop/unraid/apache-tika.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/apache.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--init --no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- MOUNTED PATHS -->
    <Config Name="Local Time" Target="/etc/localtime" Default="/etc/localtime" Mode="ro"
        Description="Container's local time from host" Type="Path" Display="advanced"
        Required="false" Mask="false">/etc/localtime</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="API Port" Target="9998" Default="9998" Mode="tcp"
        Description="API port for Apache Tika"
        Type="Port"
        Display="always" Required="true" Mask="false">9998</Config>
</Container>