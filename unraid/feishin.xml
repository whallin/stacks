<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>feishin</Name>
    <Repository>ghcr.io/jeffvli/feishin:latest</Repository>
    <Registry>https://github.com/jeffvli/feishin/pkgs/container/feishin</Registry>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://github.com/jeffvli/feishin/issues</Support>
    <Project>https://github.com/jeffvli/feishin</Project>
    <ReadMe>https://github.com/jeffvli/feishin</ReadMe>
    <Overview>A modern self-hosted music player.</Overview>
    <Category>MediaApp:Music</Category>
    <WebUI>http://[IP]:[PORT:9180]/</WebUI>
    <TemplateURL>https://raw.githubusercontent.com/whallin/stacks/develop/unraid/feishin.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/feishin.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--init --no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- MOUNTED PATHS -->
    <Config Name="Local Time" Target="/etc/localtime" Default="/etc/localtime" Mode="ro"
        Description="Container's local time from host" Type="Path" Display="advanced"
        Required="false" Mask="false">/etc/localtime</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="Web UI Port" Target="9180" Default="9180" Mode="tcp"
        Description="Web UI Port for Feishin"
        Type="Port"
        Display="always" Required="true" Mask="false">9180</Config>
</Container>