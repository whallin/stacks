<?xml version="1.0"?>
<Container version="2">
    <!-- IMAGE -->
    <Name>brave</Name>
    <Repository>ghcr.io/linuxserver/brave:latest</Repository>
    <Registry>https://github.com/linuxserver/docker-brave/pkgs/container/brave</Registry>

    <!-- CONTAINER SETTINGS -->
    <Network>bridge</Network> <!-- host or bridge -->
    <Shell>sh</Shell>
    <Privileged>false</Privileged>

    <!-- TEMPLATE INFORMATION -->
    <Support>https://github.com/linuxserver/docker-brave/issues</Support>
    <Project>https://github.com/linuxserver/docker-brave</Project>
    <ReadMe>README_URL</ReadMe>
    <Overview>Web accessible Brave running on top of Debian</Overview>
    <Category>Productivity: Network:Web</Category>
    <WebUI>https://[IP]:[PORT:3001]/</WebUI>
    <TemplateURL>https://raw.githubusercontent.com/whallin/stacks/develop/unraid/brave.xml</TemplateURL>
    <Icon>https://cdn.jsdelivr.net/gh/selfhst/icons/png/brave.png</Icon>

    <!-- CONTAINER FLAGS -->
    <ExtraParams>--no-healthcheck --restart=unless-stopped</ExtraParams>

    <!-- MOUNTED PATHS -->
    <Config Name="Brave Configuration" Target="/config" Default="/mnt/user/appdata/brave/config"
        Mode="rw"
        Description="Configuration directory for Brave" Type="Path" Display="always" Required="true"
        Mask="false">/mnt/user/appdata/brave/config</Config>
    <Config Name="Local Time" Target="/etc/localtime" Default="/etc/localtime" Mode="ro"
        Description="Container's local time from host" Type="Path" Display="advanced"
        Required="false" Mask="false">/etc/localtime</Config>

    <!-- PORT MAPPINGS -->
    <Config Name="Web UI Port" Target="3001" Default="3001" Mode="tcp"
        Description="Web UI port for Brave"
        Type="Port"
        Display="always" Required="true" Mask="false">3001</Config>

    <!-- ENVIRONMENT VARIABLES -->
    <Config Name="CUSTOM_USER" Target="CUSTOM_USER" Default="abc" Mode=""
        Description="Username for HTTP Basic Auth"
        Type="Variable" Display="always" Required="true" Mask="false">abc</Config>
    <Config Name="PASSWORD" Target="PASSWORD" Default="" Mode=""
        Description="Password for HTTP Basic Auth"
        Type="Variable" Display="always" Required="false" Mask="true">VALUE</Config>

    <!-- DEVICE MAPPINGS -->
    <Config Name="GPU Device" Target="/dev/dri" Default="" Mode=""
        Description="GPU device for hardware acceleration"
        Type="Device"
        Display="advanced" Required="false" Mask="false">/dev/dri</Config>
</Container>